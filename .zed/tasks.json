[
    {
        "label": "Run Agent (uv)",
        "command": "uv",
        "args": ["run", "python", "quickstart/agent.py"],
        "use_new_terminal": true,
        "allow_concurrent_runs": false
    },
    {
        "label": "Run Active File (uv)",
        "command": "uv",
        "args": ["run", "python", "$ZED_RELATIVE_FILE"],
        "use_new_terminal": true,
        "allow_concurrent_runs": false
    },
    {
        "label": "Compress Rules",
        "command": "python",
        "args": [".zed/scripts/compress-rules.py", "$ZED_SELECTED_TEXT"],
        "cwd": "$ZED_WORKTREE_ROOT",
        "use_new_terminal": false,
        "reveal": "always"
    }
]
